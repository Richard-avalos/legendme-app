<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_abismo"
        android:fitsSystemWindows="true">

        <!-- Imagen de fondo escalada (centerCrop) con opacidad para que no ocupe en exceso -->
        <ImageView
            android:id="@+id/bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_bg"
            android:contentDescription="@string/content_desc_toolbar_dashboard"
            android:alpha="0.28"
            android:adjustViewBounds="true" />


        <com.google.android.material.appbar.AppBarLayout

            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_medianoche"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/scroll">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.Material3.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/azul_medianoche"
                android:contentDescription="@string/content_desc_toolbar_dashboard"
                android:contentInsetStartWithNavigation="0dp"
                app:menu="@menu/menu_dashboard"
                app:navigationIconTint="@color/blanco_estrella"
                app:title="@string/app_name"
                app:titleCentered="true"
                app:titleTextColor="@color/blanco_lunar" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp">

                <!-- Sección: Misiones -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:foreground="@drawable/selector_card_press"
                    app:cardBackgroundColor="@color/azul_bosque"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="false"
                    app:strokeColor="@color/azul_neblina"
                    app:strokeWidth="1dp">


                    <!-- Header de sección con “barra” -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header de sección con “barra” -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:alpha="0.35"
                                android:background="@color/azul_neblina" />

                            <TextView
                                android:id="@+id/tvCardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cinzel_decorative"
                                android:text="@string/missions_title"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="@color/ink_on_stone"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                tools:ignore="MissingPrefix" />
                        </LinearLayout>

                        <!-- subtítulo eliminado por petición del usuario -->

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvMissions"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/rv_missions_height_3_items"
                            android:layout_marginTop="12dp"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="ifContentScrolls"
                            android:scrollbars="vertical" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Otras secciones medievales aquí... -->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation drawer (vacío por ahora, evita referencias a recursos inexistentes) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
