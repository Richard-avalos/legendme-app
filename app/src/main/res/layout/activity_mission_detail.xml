<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/azul_abismo">

        <!-- Imagen de fondo (mismo test_bg que en dashboard) -->
        <ImageView
            android:id="@+id/bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_bg"
            android:contentDescription="@string/content_desc_toolbar_dashboard"
            android:alpha="0.28"
            android:adjustViewBounds="true" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_medianoche"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.Material3.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/azul_medianoche"
                android:contentDescription="@string/content_desc_toolbar_dashboard"
                android:contentInsetStartWithNavigation="0dp"
                app:navigationIconTint="@color/blanco_estrella"
                app:titleTextColor="@color/blanco_lunar"
                app:titleCentered="true" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="96dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMissionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/azul_bosque"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/azul_neblina"
                    app:strokeWidth="1dp"
                    android:foreground="@drawable/selector_card_press">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header con título y botón de opciones -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ProgressBar
                                android:id="@+id/progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="visible" />

                            <!-- TITULO: ahora dentro del header para estar al mismo nivel que el botón -->
                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/blanco_lunar"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:visibility="gone" />

                            <!-- Botón de 3 puntos (menú de opciones) -->
                            <ImageButton
                                android:id="@+id/btnOptions"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/menu_options"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_more_vert"
                                android:visibility="gone"
                                app:tint="@color/blanco_lunar" />

                        </LinearLayout>

                        <!-- XP destacado -->
                        <TextView
                            android:id="@+id/tvXp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/legendme_teal"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/ink_on_stone"
                            android:visibility="gone" />

                        <!-- Meta secundaria (dificultad y estado resumido) -->
                        <TextView
                            android:id="@+id/tvMeta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/azul_humo"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp"
                            android:visibility="gone" />

                        <!-- NUEVO: fila de estado + porcentaje -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipStatus"
                                style="@style/Widget.MaterialComponents.Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_label"
                                android:visibility="gone"
                                app:chipStrokeColor="@color/azul_neblina"
                                app:chipStrokeWidth="1dp"
                                android:textColor="@color/blanco_lunar" />

                            <TextView
                                android:id="@+id/tvProgressPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/blanco_lunar"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- NUEVO: barra de progreso lineal (Material) -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/linearProgress"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            app:trackColor="@color/azul_neblina"
                            app:indicatorSize="8dp"
                            android:progress="0"
                            android:max="100" />

                        <!-- Nuevo: estado/fechas de inicio/completado -->
                        <TextView
                            android:id="@+id/tvState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blanco_lunar"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="4dp"
                            android:lineSpacingExtra="4dp"
                            android:visibility="gone"
                            android:background="@drawable/bg_pill" />

                        <!-- Mejor diseño de fechas: fondo sutil y padding -->
                        <TextView
                            android:id="@+id/tvDates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_pill"
                            android:padding="8dp"
                            android:textColor="@color/blanco_lunar"
                            android:lineSpacingExtra="4dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- bottomActions: ahora oculto, se usará menú desplegable -->
        <LinearLayout
            android:id="@+id/bottomActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            android:background="@color/azul_medianoche"
            android:elevation="8dp"
            android:visibility="gone"
            app:layout_anchor="@id/scroll"
            app:layout_anchorGravity="bottom|center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/start_mission"
                android:textColor="@color/blanco_lunar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPauseMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/pause_mission"
                app:iconGravity="start"
                app:iconPadding="8dp"
                android:textColor="@color/blanco_lunar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/complete_mission"
                android:textColor="@color/blanco_lunar"
                app:backgroundTint="@color/verde_exito"
                app:iconGravity="start"
                app:iconPadding="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/cancel_mission"
                android:textColor="@color/blanco_lunar"
                app:backgroundTint="@color/rojo_alerta"
                app:iconGravity="start"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/edit_label"
                android:textColor="@color/blanco_lunar" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>
