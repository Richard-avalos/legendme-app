<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/primary_teal_dark"
                android:endColor="@color/primary_teal"
                android:angle="90"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/primary_teal"
                android:endColor="@color/primary_teal_dark"
                android:angle="90"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</selector>
