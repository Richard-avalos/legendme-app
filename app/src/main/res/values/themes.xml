<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Testlegendme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -> paleta -->
        <item name="colorPrimary">@color/azul_medianoche</item>
        <item name="colorPrimaryVariant">@color/azul_bosque</item>
        <item name="colorOnPrimary">@color/blanco_estrella</item>
        <!-- Secondary brand color (acentos cálidos) -->
        <item name="colorSecondary">@color/naranja_brasa</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface / Background para componentes como Card -->
        <item name="colorSurface">@color/azul_bosque</item>
        <item name="colorOnSurface">@color/blanco_lunar</item>
        <item name="android:colorBackground">@color/azul_abismo</item>
        <item name="colorOnBackground">@color/blanco_lunar</item>

        <!-- Evitar overlay de elevación que oscurece colores en temas oscuros -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- Forzar estilo global de MaterialCardView -->
        <item name="materialCardViewStyle">@style/LegendMe.MaterialCard</item>
        <!-- Forzar estilo global de Chips -->

        <!-- Status/navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
    </style>
</resources>